<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/red" />
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="20dip" android:topLeftRadius="0dip" android:topRightRadius="20dip" />

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="20dip" android:topLeftRadius="0dip" android:topRightRadius="20dip" />

        </shape>
    </item>

</selector>