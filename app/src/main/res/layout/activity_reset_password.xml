<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".ResetPasswordActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/background_reset_password"
            android:orientation="vertical">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:alpha="0.8"
                android:padding="25dp"
                app:cardCornerRadius="14dp">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal"
                            android:weightSum="6"
                            app:layout_constraintTop_toTopOf="parent">

                            <EditText
                                android:id="@+id/userPassword_reset"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="5"
                                android:background="@null"
                                android:hint="@string/pass"
                                android:inputType="textPassword"
                                android:textColor="@color/white"
                                android:textSize="@dimen/fab_margin"></EditText>

                            <ImageView
                                android:id="@+id/signin_password_eye"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/eye"
                                android:tint="@color/red"
                                tools:ignore="UseAppTint"></ImageView>
                            <ImageView
                                android:id="@+id/signin_password_hidden"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/eye"
                                android:tint="@color/white"
                                android:visibility="gone"
                                tools:ignore="UseAppTint">

                            </ImageView>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/lightpink"
                            app:layout_constraintTop_toTopOf="parent">

                        </View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal"
                            android:weightSum="6"
                            app:layout_constraintTop_toTopOf="parent">

                            <EditText
                                android:id="@+id/userConfirmPassword_reset"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="5"
                                android:background="@null"
                                android:hint="@string/confirmPasswords"
                                android:inputType="textPassword"
                                android:textColor="@color/white"
                                android:textSize="@dimen/fab_margin"></EditText>

                            <ImageView
                                android:id="@+id/sign_in_confirm_password_eye"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/eye"
                                android:tint="@color/red"
                                tools:ignore="UseAppTint"></ImageView>

                            <ImageView
                                android:id="@+id/sign_in_confirm_password_hidden"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:src="@drawable/eye"
                                android:tint="@color/white"
                                android:visibility="gone"
                                tools:ignore="UseAppTint"></ImageView>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/lightpink"
                            app:layout_constraintTop_toTopOf="parent"></View>

                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="90dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="90dp"
                            app:cardCornerRadius="2dp"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout

                                android:id="@+id/forgot_password_submit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/submit_layout_reset"

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="@string/submit"
                                        android:textColor="@color/red"
                                        android:textSize="@dimen/heading"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            app:layout_constraintTop_toTopOf="parent">
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </FrameLayout>

</LinearLayout>